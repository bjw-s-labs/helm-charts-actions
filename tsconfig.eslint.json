{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src/**/*",
    "__fixtures__/**/*",
    "__tests__/**/*",
    "*.ts",
    "*.mts",
    "*.js",
    "*.mjs"
  ],
  "exclude": ["coverage", "dist", "node_modules"]
}
